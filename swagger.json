

{
    "openapi": "3.0.0",
    "info": {
        "title": "Contacts API",
        "version": "1.0.0",
        "description": "API documentation for the Contacts project"
    },
    "paths": {
        "/contacts" : {
            "get" : {
                "summary": "get all contacts",
                "description": "Gets all the contacts",
                "tags" : ["Contacts"],
                "responses": {
                    "200": {
                        "description": "list of contacts"
                    },
                    "500": {
                        "description": "Something went wrong"
                    }
                }
            },
            "post": {
                "summary": "Create a new contact",
                "description": "Will create a new contact and add them to the database ",
                "tags": ["Contacts"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                            "type": "object",
                            "properties": {
                                "firstName": { "type": "string" },
                                "lastName": { "type": "string" },
                                "email": { "type": "string" },
                                "favoriteColor": { "type": "string" },
                                "birthday": { "type": "string" }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                    "description": "Contact added to database"
                    },
                    "500": {
                    "description": "Some error occurred while creating the contact."
                    }
                }
            }
        },
        "/contacts/{id}": {
            "get" : {
            "summary": "get a contact by id",
            "description": "Gets a contact by the contacts id",
            "tags" : ["Contacts"],
            "parameters": [
                {
                  "name": "id",
                  "in": "path",
                  "required": true,
                  "schema": {
                    "type": "string"
                  },
                  "description": "MongoDB ObjectId of the contact"
                }
              ],
            "responses": {
                    "200": {
                        "description": "got a contact"
                    },
                    "500": {
                        "description": "Something went wrong"
                    }
                }
            },
            "put": {
                "summary": "Update a contact",
                "description": "Updates one or more fields of a contact by ID",
                "tags": ["Contacts"],
                "parameters": [
                    {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "schema": {
                        "type": "string"
                    },
                    "description": "MongoDB ObjectId of the contact"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "firstName": { "type": "string" },
                                    "lastName": { "type": "string" },
                                    "email": { "type": "string" },
                                    "favoriteColor": { "type": "string" },
                                    "birthday": { "type": "string" }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "204": {
                    "description": "Contact updated successfully (No Content)"
                    },
                    "500": {
                    "description": "Server error"
                    }
                }
            },
            "delete": {
                "summary": "delete a contact",
                "description": "deletes a contact by ID",
                "tags": ["Contacts"],
                "parameters": [
                    {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "schema": {
                            "type": "string"
                    },
                    "description": "MongoDB ObjectId of the contact"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Contact successfully deleted"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }

        }

    }
}
  